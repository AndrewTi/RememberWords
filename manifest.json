{
  "manifest_version": 2,

  "name": "Remember Words",
  "description": "The app makes you to learning foreign words more comfortable",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ]
}